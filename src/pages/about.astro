---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import { Image } from "@astrojs/image/components";
import { authors } from "@data/authors";
import Pagetitle from "@components/pagetitle.astro";
import Link from "@components/ui/link.astro";
---

<Layout title="About">
  <Container>
    <Pagetitle>
      <Fragment slot="title">About</Fragment>
      <Fragment slot="desc">Welcome to my world!</Fragment>
    </Pagetitle>

    <div class="grid md:grid-cols-1 gap-10 mx-auto max-w-5xl mt-0.5">
      {
        authors.slice(0, 3).map((item) => (
          <div class="group">
            <div class="w-full aspect-rectangle">
              <Image
                src={item.image}
                width={1270}
                height={979}
                alt="Team"
                class="w-full h-full object-cover rounded transition"
              />
            </div>

            {/* <div class="mt-4 text-center">
              <h3 class="text-sm text-midnight-300 dark:text-tahiti">
                {" "}
                {item.name}
              </h3>
            </div> */}
          </div>
        ))
      }
    </div>

    <div class="mx-auto max-w-xl text-center mt-14">
      <p class="text-lg text-blue font-serif dark:text-blue">
        Hello and welcome to my website! I'm Merel Coco Harriet Theisen (MCHT). 
        Originally from the Netherlands, I've spent the last decade soaking up the vibrant energy of London. 
        I have many interests, art, fashion and computer science amongst them. This website is where I will focus on two of 
        my greatest passions: travel and food. Here, you'll find curated recommendations of my favorite restaurants, bars, 
        and caf√©s from around the world. 
        <br>
        <br>
        I hope you find inspiration in these pages. Enjoy!
      </p>
      <!-- <div class="mt-8">
        <Link href="/contact" style="primary">Get in touch</Link>
      </div> -->
    </div>
  </Container>
</Layout>
